{% with image %}
	{% set imgAttributes %}
		{% if className %}
			class="{{ className }}"
		{% endif %}

		alt="{{ alt }}"
		{% if not alt %}
			aria-hidden="true"
		{% endif %}

		{% if not immediately %}
			loading="lazy"
		{% endif %}
	{% endset %}

	<picture>
		{% if webp %}
			<source
				type="image/webp"
				{{ webpTablet ? 'media="(min-width: 1024px)"' }}
				srcset="{{ webp }} 1x{{ webp2x ? ', ' ~ webp2x ~ ' 2x' }}"
			/>
			{% if webpTablet %}
				<source
					type="image/webp"
					media="(min-width: 768px)"
					srcset="{{ webpTablet }} 1x{{ webpTablet2x ? ', ' ~ webpTablet2x ~ ' 2x' }}"
				/>
			{% endif %}
			{% if webpMobile %}
				<source
					type="image/webp"
					srcset="{{ webpMobile }} 1x{{ webpMobile2x ? ', ' ~ webpMobile2x ~ ' 2x' }}"
				/>
			{% endif %}
		{% endif %}

		{% if defaultTablet and defaultMobile %}
			<source
				media="(min-width: 1024px)"
				srcset="{{ default }} 1x{{ default2x ? ', ' ~ default2x ~ ' 2x' }}"
			/>
			<source
				media="(min-width: 768px)"
				srcset="{{ defaultTablet }} 1x{{ defaultTablet2x ? ', ' ~ defaultTablet2x ~ ' 2x' }}"
			/>
			<img
				src="{{ defaultMobile }}"
				{{ defaultMobile2x ? 'srcset="' ~ defaultMobile2x ~ ' 2x"' }}
				{{ imgAttributes }}
			/>
		{% else %}
			<img
				src="{{ default }}"
				{{ default2x ? 'srcset="' ~ default2x ~ ' 2x"' }}
				{{ imgAttributes }}
			/>
		{% endif %}
	</picture>
{% endwith %}
